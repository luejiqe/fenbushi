{
  "model": {
    "name": "ResNet18Animals90",
    "num_classes": 90,
    "pretrained": true,
    "freeze_backbone": false
  },
  "training": {
    "epochs": 50,
    "batch_size": 32,
    "learning_rate": 0.001,
    "weight_decay": 0.0001,
    "optimizer": "Adam",
    "scheduler": "plateau",
    "scheduler_params": {
      "mode": "min",
      "factor": 0.5,
      "patience": 5
    }
  },
  "data": {
    "train_dir": "data/train",
    "val_dir": "data/val",
    "test_dir": "data/test",
    "img_size": 224,
    "num_workers": 4
  },
  "augmentation": {
    "random_crop": true,
    "random_flip": 0.5,
    "random_rotation": 15,
    "color_jitter": {
      "brightness": 0.2,
      "contrast": 0.2,
      "saturation": 0.2,
      "hue": 0.1
    }
  },
  "paths": {
    "checkpoint_dir": "checkpoints",
    "log_dir": "logs",
    "model_dir": "models"
  }
}
